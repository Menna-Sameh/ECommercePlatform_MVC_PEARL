@model DataAcessLayer.Models.ViewModels.LoginViewModel
@{
    Layout = "_AuthLayout";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="auth-container">
    <div class="auth-box">
        <div class="auth-header">
            <h2>Welcome Back!</h2>
            <p>Login to your account and continue exploring.</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="input-group">
                <input asp-for="UserName" type="text" required />
                <label>Username</label>
            </div>

            <div class="input-group">
                <input asp-for="Password" type="password" required />
                <label>Password</label>
            </div>

            <button type="submit" class="auth-btn">Login</button>

            <p class="auth-footer">Don't have an account? <a asp-action="Register">Sign up here</a></p>
        </form>
    </div>
</div>
