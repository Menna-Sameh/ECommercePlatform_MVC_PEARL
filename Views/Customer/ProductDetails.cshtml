@model DataAcessLayer.Models.ProductViewModel

<div class="product-details-container">
    <div class="product-card">
        <img src="/Images/@Model.ImageUrl" alt="@Model.Name" class="product-image">
        <h2 class="product-title">@Model.Name</h2>
        <p class="product-description">@Model.Description</p>
        <p class="product-price"><strong>Price:</strong> $@Model.Price</p>

        <div class="product-buttons">
            <a asp-controller="Customer" asp-action="Products" class="btn btn-back">⬅ Back</a>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #000, #ffc0cb);
        font-family: 'Poppins', sans-serif;
    }

    .product-details-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .product-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
        text-align: center;
        width: 90%;
        max-width: 500px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 20px rgba(255, 192, 203, 0.5);
        }

    .product-image {
        width: 100%;
        height: 500px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 15px;
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.05);
        }

    .product-title {
        font-size: 26px;
        color: #ffc0cb;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .product-description {
        font-size: 18px;
        color: #fff;
        margin-bottom: 10px;
    }

    .product-price {
        font-size: 20px;
        color: #fff;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .product-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .btn {
        padding: 12px 20px;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        transition: 0.3s;
    }

    .btn-cart {
        background: #ffc0cb;
        color: #000;
    }

        .btn-cart:hover {
            background: #ff8fa3;
        }

    .btn-back {
        background: #444;
        color: #ffc0cb;
    }

        .btn-back:hover {
            background: black;
        }
</style>
