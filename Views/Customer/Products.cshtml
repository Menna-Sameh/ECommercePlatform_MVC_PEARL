@using DataAcessLayer.Models
@model DataAcessLayer.Models.ProductsPageViewModel

@{
    Layout = "_Layout";
}

@section Products {
    <h2 class="products-title">Products</h2>
    <div class="categories-container">
        <div class="categories-dropdown">
            <button class="categories-btn">Search By Category ▾</button>
            <ul class="categories-list">
                @foreach (var category in Model.Categories)
                {
                    <li>
                        <a class="category-item" asp-controller="Customer" asp-action="ProductsByCategory" asp-route-categoryId="@category.Id">
                            @category.Name
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="products-container">
        @foreach (var product in Model.Products)
        {
            <div class="product-card">
                <img src="~/Images/@product.ImageUrl" alt="@product.Name" class="product-image" />
                <h3 class="product-name">@product.Name</h3>
                <p class="product-price">$@product.Price</p>
                <div class="product-actions">
                    <button class="btn cart-btn" data-id="@product.Id">Add to Cart</button>
                    <a asp-controller="Customer" asp-action="ProductDetails" asp-route-id="@product.Id" class="btn details-btn">Details</a>
                    <button class="fav-btn @(product.IsFavorite ? "fav-active" : "")" data-id="@product.Id">❤️</button>
                </div>
            </div>
        }
    </div>
}

<style>
    body {
        background: linear-gradient(135deg, #000, #ffc0c1);
        font-family: 'Poppins', sans-serif;
    }

    .products-title {
        text-align: center;
        color: #fff;
        font-size: 28px;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .products-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        padding: 30px;
        justify-content: center;
    }

    .product-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 20px rgba(255, 192, 203, 0.5);
        }

    .product-image {
        width: 100%;
        height: 350px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 15px;
    }

    .product-name {
        color: #ffc0cb;
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .product-price {
        color: #fff;
        font-size: 18px;
        margin-bottom: 15px;
    }

    .product-actions {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 12px;
    }

    .btn {
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
        font-weight: bold;
    }

    .details-btn {
        background: #444;
        color: #ffc0cb;
    }

        .details-btn:hover {
            background: black;
        }

    .cart-btn {
        background: #ffc0cb;
        color: #000;
    }

        .cart-btn:hover {
            background: #ff8fa3;
        }

    .fav-btn {
        background: none;
        border: none;
        font-size: 22px;
        cursor: pointer;
        transition: 0.3s;
    }

        .fav-btn.fav-active {
            color: red;
        }

        .fav-btn:hover {
            transform: scale(1.3);
        }

    .categories-container {
        text-align: center;
        margin-top: 30px;
    }

    .categories-title {
        font-size: 22px;
        color: #fff;
        margin-bottom: 10px;
    }

    .categories-dropdown {
        position: relative;
        display: inline-block;
    }

    .categories-btn {
        background: #ffc0cb;
        color: #000;
        padding: 12px 20px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        border: none;
        transition: 0.3s;
    }

        .categories-btn:hover {
            background: #ff8fa3;
        }

    .categories-list {
        position: absolute;
        left: 0;
        top: 100%;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        list-style: none;
        padding: 10px;
        margin: 0;
        width: 200px;
        z-index: 1000;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        display: none;
    }

    .categories-dropdown:hover .categories-list {
        display: block;
    }

    .category-item {
        display: block;
        padding: 10px;
        color: #fff;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

        .category-item:hover {
            background: #ff8fa3;
            border-radius: 5px;
        }
</style>

<script>
    document.querySelectorAll('.fav-btn').forEach(button => {
        button.addEventListener('click', function () {
            let productId = this.getAttribute('data-id');
            this.classList.toggle('fav-active');
            fetch(`/Customer/ToggleFavorite?id=${productId}`, { method: 'POST' });
        });
    });

    document.querySelectorAll('.cart-btn').forEach(button => {
        button.addEventListener('click', function () {
            var productId = this.getAttribute('data-id');
            fetch('/Cart/AddToCart?id=' + productId, { method: 'POST' })
                .then(() => { updateCartCount(); })
                .catch(error => console.error('Error:', error));
        });
    });
</script>
