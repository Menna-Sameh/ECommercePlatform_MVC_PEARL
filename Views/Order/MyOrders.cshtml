@model List<DataAcessLayer.Models.Order>

<h2>My Orders</h2>

@if (Model.Any())
{
    <table>
        <tr>
            <th>Order ID</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.Status</td>
                <td>@order.OrderDate.ToShortDateString()</td>

                <td>
                    <a href="@Url.Action("OrderDetails", "Order", new { id = order.Id })">View</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No orders yet.</p>
}
