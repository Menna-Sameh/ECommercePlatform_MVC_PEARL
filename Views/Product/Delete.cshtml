@model DataAcessLayer.Models.Product

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-white mb-4">Delete Product</h2>
        <p class="text-center text-danger"><strong>⚠ Are you sure you want to delete this product?</strong></p>

        <div class="mb-3">
            <label class="form-label">Product Name</label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <input asp-for="Description" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input asp-for="Price" type="number" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Stock</label>
            <input asp-for="Stock" type="number" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Category</label>
            <input value="@ViewBag.CategoryName" class="form-control" readonly />
        </div>

        <div class="mb-3 text-center">
            <label class="form-label">Product Image</label>
            <br />
            <img src="~/Images/@Model.ImageUrl" alt="Product Image" class="img-thumbnail" width="200">
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger w-100">🗑 Delete Product</button>
            <a asp-action="Index" class="btn btn-secondary w-100 mt-2">❌ Cancel</a>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #000, #ffc0cb);
        font-family: 'Poppins', sans-serif;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        width: 60%;
    }

    .card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        width: 100%;
    }

    h2 {
        color: #ffc0cb;
    }

    .btn-danger {
        background: #ff4d4d;
        border: none;
        font-weight: bold;
        padding: 10px;
        border-radius: 6px;
        transition: 0.3s;
    }

        .btn-danger:hover {
            background: #e60000;
        }

    .btn-secondary {
        background: #ccc;
        border: none;
        font-weight: bold;
        padding: 10px;
        border-radius: 6px;
        transition: 0.3s;
    }

        .btn-secondary:hover {
            background: #999;
        }
</style>
